{
  "name": "a2akit",
  "version": "0.2.0",
  "private": true,
  "description": "A TypeScript library for creating A2A protocol servers with decorators",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "dev": "pnpm -r --parallel dev",
    "lint": "eslint packages/*/src/**/*.ts",
    "clean": "pnpm -r exec rm -rf dist",
    "prepublish:check": "./scripts/prepublish.sh",
    "publish:all": "./scripts/publish.sh",
    "version:patch": "pnpm -r exec npm version patch --no-git-tag-version",
    "version:minor": "pnpm -r exec npm version minor --no-git-tag-version",
    "version:major": "pnpm -r exec npm version major --no-git-tag-version"
  },
  "keywords": [
    "a2a",
    "agent",
    "ai",
    "protocol",
    "decorators",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "reflect-metadata": "^0.2.2",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  }
}
